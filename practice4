<!doctype html>
<html lang="ja">
<head>
  <meta charaset="utf-8">
  <title>JavaScript Practice</title>
  <style>
    .box{
      width: 100px;
      height: 100px;
      background: skyblue;
      cursor: pointer;
      transition: 0.8s;
    }
    .circle{
      background: pink;
      border-radius: 50%;
      transform: rotate(360deg);
    }
</style>
</head>
<body>
  <div id="target" class="box"></div>

  <script>
    'use strict';

    const target = document.getElementById('target');

    target.addEventListener('dblclick',function(){
      target.classList.toggle('circle');
    });
  </script>
</body>
